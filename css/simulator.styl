html, body {
    width:100%;
    height:100%;
    margin:0;
}

#wrapper {
  height: 100%;
  width: 100%;
  position: relative;
}


// Control Panel Stuff
#controlPanel {
  background-color: #333;
  padding-top: 0.5em;
  padding-bottom: 0.5em;
  margin-bottom: 0;
}

.panda-buttons {
  display: flex;
  width: 50%;
  z-index: 10;
}

.panda-btn-container {
  width: 100%;
}

.panda-btn {
  font-size: 2em;
  background-color: #0193de;
  color: white;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  padding-top: 0.25em;
  padding-bottom: 0.25em;
}

.btn.focus, .btn:focus, .btn:hover {
  color: white;
}

.hidden {
  visibility: hidden;
}

.leftside {
  float: left;
}

.rightside {
  float: right;
}

.panda-buttons-spacer {
  width: 60%;
}







// Canvas stuff
#view {
  z-index: 3;
}

// Overlay Stuff
#canvasOverlay {
  position: absolute;
  top: 5em;
  width: 100%;

  overflow-y: scroll;
  overflow-x: hidden;
}

#settingsBackground {
  position: absolute;
  top: 0; left: 5%;
  width: 100%;
  height: 200%;
  z-index: 4;

  background-color: #eee;
  opacity: 0.7;
  overflow-y: scroll;
}


#settingsOverlay {
  position: absolute;
  top: 0; left: 5%;
  width: 50%;
  z-index: 3;

  padding-top: 1em;
  padding-left: 5%;
  padding-right: 5%;

  overflow-y: scroll;
  overflow-x: hidden;
}

#settings {
  position: relative;
  width: 90%;
  margin-left: 5%;
  z-index: 5;
}

#settings > p {
  margin-top: 3em;
  margin-bottom: 0;
  font-size: 1.25em;

}



// Breakpoint for small devices
@media (max-width: 768px) {

  .panda-buttons {
    width: 100%;
  }

  .panda-buttons-spacer {
    width: 0px;
  }

  #settingsOverlay, #settingsBackground {
    width: 90%;
  }
}
